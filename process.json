{
  "apps" : [{
    "name"        : "api",
    "script"      : "index.js",
    "watch"       : true,
    "ignore_watch": ["node_modules"],
    "exec_mode"   : "cluster",
    "max_memory_restart" : "64M",
    "max_restarts"  : 2 ,
    "instances"   : 1,
    "env": {
      "NODE_ENV"  : "development",
      "NODE_PATH" : "./modules;./config"
    },
    "env_production" : {
       "NODE_ENV" : "production",
       "NODE_PATH": "./modules;./config"
    }
  }]
}